{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compilar Proyecto",
			"type": "cppbuild",
			"command": "/usr/bin/gcc",
			"args": [
				"-fsanitize=thread",
				"-g",
				"check_entry.c",
				"error.c",
				"main.c",
				"memory_utils.c",
				"monitor_routine.c",
				"mutex.c",
				"orchestor.c",
				"philo_routine.c",
				"philos.c",
				"pthread_utils.c",
				"pthreads.c",
				"sincronization.c",
				"table.c",
				"utils.c",
				"-o",
				"philo",
				"-pthread"
				//"-lpthread"
			],
			"options": {
				"cwd": "${workspaceFolder}/Philo/src"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
            "label": "Actualizar Header",
            "type": "shell",
            "command": "python3",
			"args": ["update_header.py"],
			"options": {
				"cwd": "${workspaceFolder}/Philo" // Cambia el directorio de trabajo
			},
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
	]
}